<html>
<head>
    <title>Accueil</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom border-secondary">
        <a class="navbar-brand" href="/">Accueil</a>
        <a class="navbar-brand" href="/chat">Tchat</a>
        <a class="navbar-brand" href="/signup">S'inscrire</a>
        <a class="navbar-brand" href="/signin">Se connecter</a>
        <a class="navbar-brand" href="/admin">Admin</a>
        <a class="navbar-brand" href="/profile">Profile</a>
    </nav>

    <% if(Object.keys(message).length > 0){ %>
        <div>
            <% if(message.status === 'successful'){ %>
                <h3 class="p-3 mb-2 bg-success text-white text-center"><%= message.message %></h3>
            <% } %>
            <% if(message.status === 'failed'){ %>
            <h3 class="p-3 mb-2 bg-danger text-white text-center"><%= message.message %></h3>
            <% } %>
        </div>
    <% } %>

    <form action="/signup" method="post">
        <div class="from-group">
            <label for="username">Pseudo</label>
            <span class="obligatory">*</span>
            <input class="form-control" type="text" id="username" name="username" placeholder="Pseudo" 
            <% if(Object.keys(oldInput).length > 0){ %>
                value="<%= oldInput.username %>"
            <% } %>
            required/>
        </div>
        <br/>
        <div class="from-group">
            <label for="email">Adresse e-mail</label>
            <span class="obligatory">*</span>
            <input class="form-control" type="email" id="email" name="email" placeholder="E-mail" 
            <% if(Object.keys(oldInput).length > 0){ %>
                value="<%= oldInput.email %>"
            <% } %>
            required/>
        </div>
        <br/>
        <div class="from-group">
            <label for="password">Mot de passe</label>
            <span class="obligatory">*</span>
            <input class="form-control" type="password" id="password" name="password" placeholder="Mot de passe" required/>
        </div>
        <small><span class="obligatory">*Champ obligatoire</span></small>
        <br/><br/>
        <button class="btn btn-primary" type="submit">S'inscrire !</button>
    </form>
</body>
</html>