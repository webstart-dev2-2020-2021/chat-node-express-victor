html
    head    
        title S'inscrire
        meta(charset='utf-8')
        link(rel="stylesheet" href="/css/style.css")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous")
    
    body
        include nav.pug
        form(action="/signup" method="post")
            div(class="from-group")
                label(for="nickname") Pseudo
                span(class="obligatory") *
                input(type="text" class="form-control" id="nickname" name="nickname" placeholder="Pseudo" required)
            br
            div(class="from-group")
                label(for="last-name") Nom
                span(class="obligatory") *
                input(type="text" class="form-control" id="last-name" name="last-name" placeholder="Nom" required)
            br
            div(class="from-group")
                label(for="first-name") Prénom
                span(class="obligatory") *
                input(type="text" class="form-control" id="first-name" name="first-name" placeholder="Prénom" required)
            br
            div(class="from-group")
                label(for="email") Adresse e-mail
                span(class="obligatory") *
                input(type="email" class="form-control" id="email" name="email" placeholder="E-mail" required)
            br
            div(class="from-group")
                label(for="password") Mot de passe
                span(class="obligatory") *
                input(type="password" class="form-control" id="password" name="password" placeholder="Mot de passe" required)
            small 
                span(class="obligatory") *Champ obligatoire
            br
            br
            button(type="submit" class="btn btn-primary") S'inscrire !